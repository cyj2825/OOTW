<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutListItem"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_bookmark_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22.04.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_bookmark_weather_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@android:drawable/btn_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_bookmark_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_date"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_bookmark_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="기온"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_date"
        app:layout_constraintStart_toEndOf="@+id/tv_bookmark_region" />

    <ImageView
        android:id="@+id/iv_bookmark_image"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_marginTop="8dp"
        android:scaleType="center"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_region"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_bookmark_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="작성 내용"
        app:layout_constraintTop_toBottomOf="@+id/iv_bookmark_image"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>