<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tv_SignUp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:id="@+id/sv_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_SignUp_forprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp">

            <LinearLayout
                android:id="@+id/ll_SignUp_forprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_SignUp_profileImg"
                    android:src="@drawable/feed_profile"
                    android:layout_gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <Button
                    android:id="@+id/btn_SignUp_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:text="업로드"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_SignUp_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:text="닉네임"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_SignUp_forprofile"/>

            <EditText
                android:id="@+id/et_SignUp_nickname"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="닉네임 입력"
                android:paddingStart="12sp"
                android:background="@drawable/bg_edit_text_gray"
                app:layout_constraintStart_toEndOf="@+id/tv_SignUp_nickname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_SignUp_nickname"
                app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_nickname"/>

            <TextView
                android:id="@+id/tv_SignUp_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:text="성별"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_nickname"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/tv_SignUp_gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_SignUp_gender"
                app:layout_constraintBottom_toBottomOf="@id/tv_SignUp_gender">

                <RadioButton
                    android:id="@+id/rb_men"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="28dp"
                    android:text="남성"/>

                <RadioButton
                    android:id="@+id/rb_women"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"/>
            </RadioGroup>
            <TextView
                android:id="@+id/tv_SignUp_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:text="생년월일"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_gender"/>
            <!-- 생년월일 휠 -->
            <TextView
                android:id="@+id/tv_SignUp_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:text="아이디"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_birth"/>

            <EditText
                android:id="@+id/et_SignUp_id"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="아이디 입력"
                android:paddingStart="12sp"
                android:background="@drawable/bg_edit_text_gray"
                app:layout_constraintStart_toEndOf="@+id/tv_SignUp_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_SignUp_id"
                app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_id"/>

            <TextView
                android:id="@+id/tv_SignUp_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:text="비밀번호"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_id"/>

            <EditText
                android:id="@+id/et_SignUp_pw"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="비밀번호 입력"
                android:paddingStart="12sp"
                android:background="@drawable/bg_edit_text_gray"
                app:layout_constraintStart_toEndOf="@+id/tv_SignUp_pw"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_SignUp_pw"
                app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_pw"/>

            <TextView
                android:id="@+id/tv_SignUp_repw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:text="비밀번호\n확인"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_pw"/>

            <EditText
                android:id="@+id/et_SignUp_repw"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="비밀번호 재입력"
                android:paddingStart="12sp"
                android:background="@drawable/bg_edit_text_gray"
                app:layout_constraintStart_toEndOf="@+id/tv_SignUp_repw"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_SignUp_repw"
                app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_repw"/>

            <TextView
                android:id="@+id/tv_SignUp_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:text="이메일"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_repw"/>

            <EditText
                android:id="@+id/et_SignUp_email"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="이메일 입력"
                android:paddingStart="12sp"
                android:background="@drawable/bg_edit_text_gray"
                app:layout_constraintStart_toEndOf="@+id/tv_SignUp_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_SignUp_email"
                app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_email"/>

            <!-- 이 부분 배치 다시 수정 -->
            <TextView
                android:id="@+id/tv_SignUp_email_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:text="이메일 수신 동의 여부"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_email"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/tv_SignUp_email_agreement"
                app:layout_constraintTop_toTopOf="@+id/tv_SignUp_email_agreement"
                app:layout_constraintBottom_toBottomOf="@id/tv_SignUp_email_agreement">

                <RadioButton
                    android:id="@+id/rb_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="28dp"
                    android:text="동의"/>

                <RadioButton
                    android:id="@+id/rb_disagree"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비동의"/>
            </RadioGroup>

            <Button
                android:id="@+id/btn_SignUp_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:text="다음"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_SignUp_email_agreement"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>