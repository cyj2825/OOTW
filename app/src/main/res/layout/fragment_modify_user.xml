<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ModifyUserFragment">

    <ScrollView
        android:id="@+id/sv_UserSetUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_UserSetUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/tv_UserSetUp_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도 민감도"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/cl_UserSetUp"/>

            <TextView
                android:id="@+id/tv_UserSetUp_question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="추위에 어느 정도 민감하신가요?"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_UserSetUp_temperature"/>

            <LinearLayout
                android:id="@+id/ll_UserSetUp_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_UserSetUp_question1">

                <CheckBox
                    android:id="@+id/cb_UserSetUp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 둔함"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/cb_UserSetUp_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="둔함"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/cb_UserSetUp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="보통"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/cb_UserSetUp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="민감"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/cb_UserSetUp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 민감"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_UserSetUp_question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="더위에 어느 정도 민감하신가요?"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_UserSetUp_one"/>

            <LinearLayout
                android:id="@+id/ll_UserSetUp_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_UserSetUp_question2">

                <CheckBox
                    android:id="@+id/cb_UserSetUp_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 둔함"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/cb_UserSetUp_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="둔함"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/cb_UserSetUp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="보통"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/cb_UserSetUp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="민감"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/cb_UserSetUp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매우 민감"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_UserSetUp_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="지역 설정"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_UserSetUp_two"/>

            <!-- spinner 수정 필요 -->
            <Spinner
                android:id="@+id/spin_UserSetUp_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_UserSetUp_area"/>

            <Spinner
                android:id="@+id/spin_UserSetUp_gu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toEndOf="@+id/spin_UserSetUp_do"
                app:layout_constraintTop_toBottomOf="@+id/tv_UserSetUp_area"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btn_UserSetUp_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="수정"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spin_UserSetUp_do"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
