<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyPageFragment"
    android:id="@+id/fragment_my_page">

    <ImageView
        android:id="@+id/iv_MyPage_mainlogo"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:contentDescription="logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mainlogo" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_MyPage_profileImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/feed_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_MyPage_mainlogo" />

    <TextView
        android:id="@+id/tv_MyPage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="닉네임"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_MyPage_profileImg"
        app:layout_constraintTop_toTopOf="@id/iv_MyPage_profileImg" />

    <TextView
        android:id="@+id/tv_Closet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="님"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_MyPage_name"
        app:layout_constraintStart_toEndOf="@+id/tv_MyPage_name"
        app:layout_constraintTop_toTopOf="@id/tv_MyPage_name" />

    <TextView
        android:id="@+id/tv_Closet_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="#지역 #온도 타입 #스타일"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_MyPage_profileImg"
        app:layout_constraintStart_toEndOf="@id/iv_MyPage_profileImg"
        app:layout_constraintTop_toBottomOf="@id/tv_MyPage_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_MyPage_profileImg">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="4dp"
            android:background="@color/blue_300"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_my_page_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="회원 정보 수정"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="4dp"
            android:background="@color/blue_300"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_my_page_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="공지사항"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="4dp"
            android:background="@color/blue_300"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_my_page_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="로그아웃"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="4dp"
            android:background="@color/blue_300"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>